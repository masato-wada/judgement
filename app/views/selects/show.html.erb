<%- model_class = Select -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question_id) %>:</strong></dt>
  <dd><%= @select.question_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @select.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:active_flg) %>:</strong></dt>
  <dd><%= @select.active_flg %></dd>
  <dt><strong><%= model_class.human_attribute_name(:delete_flg) %>:</strong></dt>
  <dd><%= @select.delete_flg %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              selects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_select_path(@select), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              select_path(@select),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
