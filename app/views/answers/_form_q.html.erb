<%= simple_form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>

  <% @selects.each do |select| %>
    <%= f.fields_for :answers, @answer do |answer_field| %>
      <%= f.radio_button :select_id, select.id %><%= select.desc %>
      <%= error_span(@answer[:select_id]) %>
    <% end %>
  <% end %>
  <%= f.hidden_field :question_id, :value => @question.id %>

  <%= f.fields_for :comments, @answer.comments do |comment_field| %>
    <%= comment_field.input :comment, label: 'コメント' %>
  <% end %>

  <%= f.button :submit, :class => 'btn-primary' %>

<% end %>
