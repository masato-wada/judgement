<%= simple_form_for @answer, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :question_id %>
  <%= error_span(@answer[:question_id]) %>
  <%= f.input :select_id %>
  <%= error_span(@answer[:select_id]) %>
  <%= f.input :active_flg %>
  <%= error_span(@answer[:active_flg]) %>
  <%= f.input :delete_flg %>
  <%= error_span(@answer[:delete_flg]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                answers_path, :class => 'btn btn-default' %>
<% end %>
